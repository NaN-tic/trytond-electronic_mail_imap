<data>
    <xpath expr="/form/group[@id='buttons']" position="replace">
        <group colspan="4" col="4" id="buttons">
            <button name="draft" icon="tryton-clear"/>
            <button name="done" icon="tryton-forward"/>
            <button name="test" icon="tryton-ok"/>
            <button name="get_mails" icon="tryton-email"/>
        </group>
    </xpath>
    <xpath expr="/form/field[@name='password']" position="after">
        <separator id="local" string="Local Information" colspan="6"/>
        <label name="mailbox"/>
        <field name="mailbox"/>
    </xpath>
    <xpath expr="/form/field[@name='destination_folder']" position="after">
        <field name="from_parties" colspan="6"/>
    </xpath>

</data>
