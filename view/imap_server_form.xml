<?xml version="1.0"?>
<data>
    <xpath expr="/form/group[@id='buttons']" position="replace">
        <group colspan="4" col="4" id="buttons">
            <button name="draft" string="Draft" icon="tryton-clear"/>
            <button name="done" string="Confirm" icon="tryton-go-next"/>
            <button name="test" string="Test Connection" icon="tryton-ok"/>
            <button name="get_emails" string="Get Emails" icon="tryton-mail-message-new"/>
        </group>
    </xpath>

    <xpath expr="/form/separator[@id='user']" position="before">
        <separator id="local" string="Local Information" colspan="6"/>
        <label name="mailbox"/>
        <field name="mailbox"/>
    </xpath>
</data>
